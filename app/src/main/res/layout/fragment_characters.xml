<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="View"
            type="android.view.View" />

        <variable
            name="fragment"
            type="com.diego.matesanz.rickandmorty.screens.menu.characters.CharactersFragment" />

        <variable
            name="viewModel"
            type="com.diego.matesanz.rickandmorty.screens.menu.characters.CharactersViewModel" />

        <variable
            name="selectedCharacter"
            type="com.diego.matesanz.rickandmorty.data.model.Character" />

        <variable
            name="showInfo"
            type="Boolean" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:context=".screens.menu.characters.CharactersFragment">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/match_constraints"
                android:padding="@dimen/padding_xx_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_title"
                        style="@style/HeadingSmall"
                        android:layout_width="@dimen/match_constraints"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_xx_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/characters_fragment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_characters"
                        characters="@{viewModel.characterList}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        app:layout_constraintTop_toBottomOf="@id/text_view_title"
                        tools:listitem="@layout/layout_character_item" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <include
                android:id="@+id/layout_character_info"
                layout="@layout/layout_character_info"
                android:visibility="@{showInfo ? View.VISIBLE : View.GONE}"
                app:character="@{selectedCharacter}"
                app:fragment="@{fragment}"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
